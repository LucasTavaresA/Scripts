#!/usr/bin/env sh

[ "$1" = "semicones" ] && printf "%s" "$(amixer sget Master | grep -m 1 -o '\[.*%\]')" && exit 0
[ "$(amixer sget Master | sed '$b;d')" = "[off]" ] && printf "ðŸ”‡" && exit 0

vol="$(amixer sget Master | grep -m 1 '\[.*%\]' | awk -F'[][]' '{ print $2 }' | cut -d'%' -f1)"

if [ "$vol" -gt "65" ]; then
	icon="ðŸ”Š"
	printf "%s %s%%" "$icon" "$vol"
elif [ "$vol" -gt "45" ]; then
	icon="ðŸ”‰"
	printf "%s %s%%" "$icon" "$vol"
elif [ "$vol" -gt "1" ]; then
	icon="ðŸ”ˆ"
	printf "%s %s%%" "$icon" "$vol"
elif [ "$vol" = "0" ]; then
	printf "ðŸ”‡"
fi
