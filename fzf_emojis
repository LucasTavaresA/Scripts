#!/usr/bin/env sh
set -e
copy="wl-copy"
[ -z "$WAYLAND_DISPLAY" ] && copy="xsel --clipboard"

selecionado=$(cut -d ';' -f1 "$(dirname "$0")"/listas/emojis | uniq -u | fzf | awk '{print $1}')

# Sai caso nenhum Ã© selecionado.
[ -z "$selecionado" ] && exit

printf "%s" "$selecionado" | $copy && notify-send -i emoji "'$selecionado' copiado."
